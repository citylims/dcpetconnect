<ul>
	<% @post.each do |post| %>
			<li>
				<h3><%= post.body %></h3>
				<h3><%= post.created_at %></h3>
				<img class ="pet-image" src="<%= post.image %>">
				<% if session[:user_id] == post.user_id %>
				<div>
					<form action="/delete_post" method="post">
						<legend>Delete Post?</legend>
						<input name="_method" type="hidden" value="delete" />
						<input type="hidden" value="<%= post.id %>" name="post_to_delete">
						<input class = "fs" type="submit" placeholder="delete">
					</form>
				</div>
				<% else %>
				<% end %>
			</li>
	<% end %>
</ul>
