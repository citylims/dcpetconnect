    <div class="about">
			<div class = "signup">
				<h3 class="form-header">Sign up</h3>
		 		<form action="/signup" method = "post">
		 			<legend>User Name</legend>
			 		<input type="text" placeholder="UserName" name="username" required>
			  	<legend>Email</legend>
				  <input type="text" placholder="Email" name="email" required>
			  	<legend>Password</legend>
				  <input type="password" placeholder="Password" name="password" required>
			  	<legend>Select Your Neighborhood</legend>
				  <select name="neighborhood" placeholder="DC Neighborhoods">
				  	<% @hoods.each do |hood| %>
				  	<option value="<%= hood %>"><%= hood.gsub(/(?<=[a-z])(?=[A-Z])/, ' ') %></option>
				  	<% end %>
				  </select>
					<br>
					<br>
				  <input class = "fs" type="submit" placeholder="Log In">
		 		</form>
			</div>
		</div>	
	</div>
</div>